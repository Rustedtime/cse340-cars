<h1><%- title %></h1>
<%- messages() %>
<div class="flex-container">
    <div id="login">
        <form>
            <br><label for="account_email" class="login"><b>Email:</b></label><br>
            <input type="email" id="account_email" name="account_email" class="login" required><br>
            <label for="password" class="login"><b>Password:</b></label><br>
            <input type="password" id="account_password" name="account_password" class="login" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required><br><br>
            <input type="submit" value="Submit" class="login">
        </form>
        <h2 class="login">No account?</h2>
        <h2 class="login"><a title="Click to create a new account" href="/account/register">Sign-up</a></h2>
    </div>
</div>